@using Codell.Pies.Web.Extensions
@model IEnumerable<Codell.Pies.Web.Models.PieModel>
@section Scripts
{
    <script type="text/javascript">
        $(function () {
            ko.applyBindings(new pies.Index(@Html.Raw(Model.ToJson()), '@Url.Action("Find", "Search")'), $('#pies')[0]);
        });
    </script>    
}
<div id="pies">
    <div>
        <input type="text" data-bind="autocomplete: {sourceUrl: '@Url.Action("GetTags", "Search")' }, selected: selectedTag"/>
        <a href="#" data-bind="click: find">Search</a>
        <a href="@Url.Action("FindMyPies", "Search")">My Pies</a>
    </div>    
    <div data-bind="template: { name: 'pie-template', foreach: pies }"></div>        
    <script type="text/html" id="pie-template">
        <div class="pie" data-bind="pieChart: $data, pieOptions: { chartMap: { data: 'allIngredients', title: 'caption' }, dataMap: { text: 'description', value: 'percent', color: 'color'} }">
        </div>
    </script>    
</div>

